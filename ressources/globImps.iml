program Assoc()
 global
    fun minusOne(copy var x:int32) returns y:int32
        do
            x := x - 1;
            ! x;
            if x /= 0 then
                y := minusOne(x)
            else
                y := x
            endif
    endfun;
    var x:int32
 do
 x init := 3;
 x := minusOne(x);
 ! x
endprogram
