program procGuardIF()
 global
    proc isDivisibleByThree(copy var x:int32, copy var b:bool)
        do
            guardif
                | (x modE 3) == 0 => b := 1
                | (x modE 3) > 0 => b := 0
                default b := 0
            endguardif;
            ! b
    endproc;
    var x:int32;
    var b:bool
 do
 x init := 7;
 b init := 0;
 call isDivisibleByThree(x,b)
endprogram
